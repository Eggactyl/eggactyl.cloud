---
import StarlightThemeSelect from '@astrojs/starlight/components/ThemeSelect.astro'
import type { Props } from '@astrojs/starlight/props'
import config from 'virtual:starlight-blog-config'
import { isAnyBlogPostPage } from '../libs/page'
const isBlogPost = isAnyBlogPostPage(Astro.props.slug)

const title = config?.translations[Astro.props.locale!] || config.title
---

<div>
  <a href="/releases">{title}</a>
</div>
<StarlightThemeSelect {...Astro.props}>
  <slot />
</StarlightThemeSelect>

<style>
  div {
    border-inline-end: 1px solid var(--sl-color-gray-5);
    display: none;
    height: 2rem;
    padding-inline-end: 1rem;
  }

  @media (min-width: 50rem) {
    div {
      align-items: center;
      display: flex;
    }
  }

  a {
    color: var(--sl-color-text-accent);
    font-weight: 600;
    text-decoration: none;
  }
</style>
